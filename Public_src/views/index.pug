extends ./layout.pug

block content
  section
    .container
      .h-400x.h-sm-auto
        .h-100.h-sm-auto.oflow-hidden

          each article in headlines.slice(0, -(headlines.length - 1))
            .pb-5.pr-5.pr-sm-0.float-left.float-sm-none.w-2-3.w-sm-100.h-100.h-sm-300x
              a.pos-relative.h-100.dplay-block(href=`${article.url}`, target="_blank")
                .img-bg.bg-grad-layer-6(style=`background: url('${article.image}'); background-size: cover;`)
                .abs-blr.color-white.p-20.bg-sm-color-7
                  h3.mb-15.mb-sm-5.font-sm-13
                    b=article.title
                  ul.list-li-mr-20
                    li
                      | by 
                      span.color-primary
                        b #{article.author}
                      |  #{article.date}

          .float-left.float-sm-none.w-1-3.w-sm-100.h-100.h-sm-600x
            each article in headlines.slice(1)
              .pl-5.pb-5.pl-sm-0.ptb-sm-5.pos-relative.h-50
                a.pos-relative.h-100.dplay-block(href=`${article.url}`, target="_blank")
                  .img-bg.bg-grad-layer-6( style=`background: url('${article.image}'); background-size: cover;`)
                  .abs-blr.color-white.p-20.bg-sm-color-7
                    h4.mb-10.mb-sm-5
                      b=article.title
                    ul.list-li-mr-20
                      li=article.date

  section
    .container
      .row
        .col-md-12.col-lg-8
          h4.p-title
            i.color-primary.ion-ios-videocam.mr-10
            b FROM LOCAL MEETUP GROUPS
          .row
            .col-sm-6
              .row
              each video in communityVideos.slice(0, -(communityVideos.length - 1))
                a(href=`/video/${video.id}.html`)
                  img(src=`${video.thmbnailPlayButton}` alt='')
                  h4.pt-20
                      b=video.name
                  ul.list-li-mr-20.pt-10.pb-20
                    li.color-black
                      b=video.author
                    li.color-black
                      i.color-primary.mr-5.font-12.ion-ios-time
                      b=video.duration

            .col-sm-6
              each video in communityVideos.slice(1)
                a.oflow-hidden.pos-relative.mb-20.dplay-block(href=`/video/${video.id}.html`)
                  .wh-100x.abs-tlr
                    img(src=`${video.thmbnailPlayButton}`, alt='')
                  .ml-120.min-h-100x
                    h5
                      b=video.name
                    h6.color-lite-black.pt-5
                      | by 
                      span.color-black
                        b=video.author
                    h6.color-lite-black.pt-5
                      span.color-black
                        | &nbsp;
                        i.color-primary.mr-5.font-12.ion-ios-time
                        b=video.duration

          h4.p-title.mt-30
            i.color-primary.ion-ios-videocam.mr-10
            b 2019 CONFERENCE VIDEOS
          .row
            each video in conferenceVideos.slice(0, -(conferenceVideos.length - 6))
              .col-sm-6
                a(href=`/video/${video.id}.html`)
                  img(src=`${video.thmbnailPlayButton}` alt='')
                  h4.pt-20
                      b=video.name
                  ul.list-li-mr-20.pt-10.pb-20
                    li.color-black
                      b=video.author
                    li.color-black
                      i.color-primary.mr-5.font-12.ion-ios-time
                      b=video.duration
                    li.color-lite-black
                      span.color-black Aug 13, 2019

          a.dplay-block.btn-brdr-primary.mt-20.mb-md-50(href='https://vimeo.com/showcase/swiftto-conf-2019')
            i.color-primary.ion-ios-videocam.mr-10
            b VIEW ALL 2019 CONFERENCE VIDEOS

        .d-none.d-md-block.d-lg-none.col-md-3
        .col-md-6.col-lg-4
          .pl-20.pl-md-0
            .mb-50
              h4.p-title
                i.color-primary.ion-ios-calendar.mr-10
                b UPCOMING EVENTS
              each event in events
                a.oflow-hidden.pos-relative.mb-20.dplay-block(href=event.url, target="_blank")
                  //- .wh-100x.abs-tlr
                  //-   img(src=event.organization.image alt='')
                  .min-h-100x
                    h5
                      i.color-primary.ion-ios-calendar-outline.mr-10
                      b=event.name
                    h6.mt-10 
                      b=event.startDate
                    h6.color-lite-black.pt-10
                      | by 
                      span.color-black
                        b=event.organization.name

