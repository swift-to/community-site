extends ./layout.pug

block content
  section
    .container
      .row
        .col-md-12.col-lg-8
          h4.p-title.mb-10
            i.color-primary.mr-10
            b BLOGS
          .row
            each blog in blogs
              .col-sm-6.mb-30
                a.opacity-hover(href=blog.url, target="_blank")
                  h4.pt-10.pb-5.color-primary
                    b=blog.postTitle
                  h5.pb-5.color-lite-black
                    b=blog.hostName
                  ul.list-li-mr-20.pb-10
                    li.color-black
                      b=blog.author
                    li.color-black
                      span.color-black=blog.date
                  p=blog.excerpt

        .d-none.d-md-block.d-lg-none.col-md-3
        .col-md-6.col-lg-4
          .pl-20.pl-md-0
            .mb-50
              h4.p-title
                i.color-primary.ion-ios-calendar.mr-10
                b UPCOMING EVENTS
              each event in events
                a.oflow-hidden.pos-relative.mb-20.dplay-block(href=event.url, target="_blank")
                  //- .wh-100x.abs-tlr
                  //-   img(src=event.organization.image alt='')
                  .min-h-100x
                    h5
                      i.color-primary.ion-ios-calendar-outline.mr-10
                      b=event.name
                    h6.mt-10 
                      b=event.startDate
                    h6.color-lite-black.pt-10
                      | by 
                      span.color-black
                        b=event.organization.name

