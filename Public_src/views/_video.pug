extends ./layout.pug

block content
  section
    .container
      .row
        .col-sm-12
            h1.mb-20 #{name} - #{author}
            div(style="padding:56.25% 0 0 0;position:relative;")
                iframe(src=`https://player.vimeo.com/video/${id}?autoplay=0&color=F05339&title=1&byline=1&portrait=1`, style="position:absolute;top:0;left:0;width:100%;height:100%;", frameborder="0", allow="autoplay; fullscreen", allowfullscreen)
            script(src="https://player.vimeo.com/api/player.js")